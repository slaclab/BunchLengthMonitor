record(calc, "$(P):0:SHT_STS_CALC")
{
  field(INPA, "$(P):LIMSW0")
  field(INPB, "$(P):LIMSW6") 
  field(CALC, "A&&B ? 3 : !A&&!B ? 2 : A")
  field(SCAN, "1 second")
  field(PINI, "YES")
  field(DESC, "0=OUT, 1=IN, 2=MOVING, 3=INCONSISTENT")
}

