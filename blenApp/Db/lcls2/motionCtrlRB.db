record(mbbi, "$(P):0:SHT_STS")
{
    field(DESC, "Shutter 0 Readback Status")
    field(INP,  "$(P):0:SHT_STS_CALC")
    field(SCAN, "1 second")
    field(ZRVL, "0") 
    field(ZRST, "OUT")
    field(ONVL, "1") 
    field(ONST, "IN") 
    field(TWVL, "2") 
    field(TWST, "MOVING") 
    field(THVL, "3") 
    field(THST, "ERROR") 
#    info(autosaveFields, "VAL RVAL DESC")
}

