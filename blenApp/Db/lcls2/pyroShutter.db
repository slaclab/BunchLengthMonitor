#
# (P):FLTX_ERR -- FilterX Error State
#

record(calc, "$(P):FLT1_ERR")
{
  field(INPA, "$(P):FLT1_STS")
  field(INPB, "$(P):FLT1_CTRL")
  field(INPC, "0")    # OK Value
  field(INPD, "1")    # Error Value
  field(CALC, "(A = B) ? C : D")
  field(SCAN, "$(SCAN)")
  field(PHAS, "1")
  field(DESC, "0 = OK 1 = Mismatch of STS and CTRL")
}

