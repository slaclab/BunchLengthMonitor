record(mbbo, "$(P):FLT1_CTRL")
{
  field(DESC, "Neutral Density Filter")
  field(VAL,   "0")
  field(ZRVL,  "0")
  field(ZRST,  "OUT")
  field(ONVL,  "1")
  field(ONST,  "IN")
  field(OUT, "$(P):FLT1_MOVE PP")

  info(autosaveFields, "VAL DESC")
}

