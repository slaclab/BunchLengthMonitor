#
# Control (CTRL) values:
# 0 = OUT
# 1 = IN
#
# $(PX):SHT_CTRL  -- AMCX Shutter Control
# $(P):FLTX_CTRL  -- FilterX Control
#

record(mbbo, "$(P0):SHT_CTRL")
{
  field(VAL,   "0")
  field(ZRVL,  "0")
  field(ZRST,  "OUT")
  field(ONVL,  "1")
  field(ONST,  "IN")
  field(FLINK, "$(P0):SHT_MOVE") 
}

