record(calc, "$(P):0:BLEN_USER_STATUS")
{
    field(DESC, "0=SENSOR 0, 1=SENSOR 1, 2=User Choice")
    field(INPA, "$(P):0:BLEN PP")
    field(INPB, "$(P):1:BLEN PP")
    field(INPC, "11400")
    field(CALC, "A>C&&B>C ? 0 : A<C&&B<C ? 1 : 2")
    field(LOLO, "0")
    field(LLSV, "MAJOR")
    field(HIHI, "1")
    field(HSV,  "NO_ALARM")
    field(HIHI, "2")
    field(HHSV, "NO_ALARM")
    field(SCAN, "1 second")
}

