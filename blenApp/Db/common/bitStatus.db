#==============================================================================
#
# Abs:  Bit status database file.
#
# Name: bitStatus.db
#
# Note: Must follow the LCLS naming conventions.
#
#==============================================================================

#
# $(P):$(RESULT)
#
record(calc, "$(P):$(RESULT)")
{
  field(INPA, "$(P):$(STATUS)")
  field(INPB, "$(BIT)")
  field(CALC, "(A>>B)&1")
  field(SCAN, "$(SCAN)")
  field(DESC, "bit $(BIT) of $(STATUS)")
}
