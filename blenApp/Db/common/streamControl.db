# Control stream from sensor A 
record (bo, "BLEN:$(AREA):$(POS):$(INSTA):ACCESS") {
  field(DESC, "Stream from ATCA control")
  field(DTYP, "Raw Soft Channel")
  field(PINI, "YES")
  field(ZNAM, "Offline")
  field(ONAM, "Running")
  field(ZSV, "MAJOR")
  field(OSV, "NO_ALARM")
  field(OUT, "BLEN:$(AREA):$(POS):$(INSTA):AutoRearm PP")

  info(autosaveFields, "VAL")
}

