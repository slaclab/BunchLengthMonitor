#This database handles adjusting the coeficents when the window size changes
#0 running
#1 calibration

record(calcout, "$(P):$(AMC):CoefA$(COEF)_SAV"){
    field(INPA, "$(P):$(AMC):CalibMode")
    field(INPB, "$(P):$(AMC):CoefA$(COEF)")
    field(INPC, "$(P):$(AMC):CoefA$(COEF)_SAV")
    field(CALC, "A ? B : C")
    field(SCAN, "1 second")
    field(PINI, "YES")
}

record(calcout, "$(P):$(AMC)$(SENS):NumSamp1_SAV"){
    field(INPA, "$(P):$(AMC):CalibMode")
    field(INPB, "$(P):$(AMC)$(SENS):NumSamp1RBV")
    field(INPC, "$(P):$(AMC)$(SENS):NumSamp1_SAV")
    field(CALC, "A ? B : C")
    field(SCAN, "1 second")
}

record(calcout, "$(P):$(AMC):Calib_Coef_A$(COEF)"){
    field(INPA, "$(P):$(AMC):CalibMode")
    field(INPB, "$(P):$(AMC):CoefA$(COEF)_SAV")
    field(INPC, "$(P):$(AMC)$(SENS):NumSamp1_SAV")
    field(INPD, "$(P):$(AMC)$(SENS):NumSamp1RBV")
    field(INPE, "$(P):$(AMC):CoefA$(COEF)")
    
    field(CALC, "A ? 0 : B*(D/C)")
    
    field(OOPT, "When Non-zero")    
    field(OUT, "$(P):$(AMC):CoefA$(COEF)")
    field(FLNK, "$(P):$(AMC):CoefA$(COEF)")
    
    field(SCAN, "1 second")
}
