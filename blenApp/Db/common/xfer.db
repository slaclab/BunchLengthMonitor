#
# This record calculates:
#
#   $(DEST) = $(SRC) * $(ESLO) + $(EOFF)
#
record(calcout, "$(P):$(R):XFER")
{
  field(INPA, "$(SRC)")
  field(INPB, "$(ESLO)")
  field(INPC, "$(EOFF)")
  field(CALC, "(A*B)+C")
  field(OUT, "$(DEST)")
  field(OOPT, "On Change")
  field(FLNK, "$(DEST).PROC")
  field(SCAN, "$(SCAN)")
}
